<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MyMusic.Player.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyMusic.Player"
    xmlns:pages="clr-namespace:MyMusic.Player.Pages"
    Shell.FlyoutBehavior="Locked"
    Shell.FlyoutWidth="150">
    
    <!-- Bug with .net 7 and .net maui, flyout is buggy -->
    <ShellContent FlyoutIcon="house.png" Title="HOME" ContentTemplate="{DataTemplate local:MainPage}"/>
    <ShellContent FlyoutIcon="songs.png" Title="SONGS" ContentTemplate="{DataTemplate pages:SongsPage}"/>
    <ShellContent FlyoutIcon="cloud.png" Title="CLOUD" ContentTemplate="{DataTemplate pages:CloudDownloads}"/>
    <ShellContent FlyoutIcon="local.png" Title="LOCAL" ContentTemplate="{DataTemplate pages:LocalDownloads}"/>

    <Shell.FlyoutFooter>
        <Image Source="config.png" />
