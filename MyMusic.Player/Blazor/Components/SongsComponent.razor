<h3>Songs (@songModels.Count)</h3>

@if (songModels is not null || songModels.Count > 0)
{
    <div class="h-50" style="overflow-y: scroll">
        <RadzenDataGrid Data="@songModels">
            <Columns>
                <RadzenDataGridColumn Title="Action's" Width="15px">
                    <Template Context="data">
                        <RadzenButton ButtonStyle="ButtonStyle.Dark" Icon="play_arrow" IconColor="green"></RadzenButton>
                    </Template>
                </RadzenDataGridColumn>
                @* <RadzenDataGridColumn Property="Serial" Title="Serial"></RadzenDataGridColumn> *@
                <RadzenDataGridColumn Property="Title" Title="Name" Width="40px" TextAlign="TextAlign.Center"></RadzenDataGridColumn>
                <RadzenDataGridColumn Property="Description" Title="Description" Width="60px"></RadzenDataGridColumn>
                <RadzenDataGridColumn Property="Duration" Title="Duration" Width="25px"></RadzenDataGridColumn>
            </Columns>
        </RadzenDataGrid>
    </div>
}