<RadzenRow class="w-50 m-auto">
  <RadzenColumn Size="12">
    <RadzenStack Orientation="Orientation.Horizontal">
      <InputText @ref="inputTextreference" style="color:black" class="w-100" @bind-Value="Query" onkeyup="@CheckKeyPressed" placeholder="Search" />
      <RadzenButton Icon="close" Click="ClearCurrentSearch" style="background-color:transparent; color:red" />
      <RadzenButton class="w-25" Icon="search" Text="Search" Click="NavigateToSearchPage" ButtonStyle="ButtonStyle.Dark" />
    </RadzenStack>
  </RadzenColumn>
</RadzenRow>
