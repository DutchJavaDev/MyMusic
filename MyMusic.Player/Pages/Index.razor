@page "/"
@attribute [NavigationInfo("oi-home","HOME",0)]
@using MyMusic.Player.Blazor.Components

<div class="container">
    <div class="w-25 position-fixed end-50 start-50">
        <div class="mt-2">
            <SearchBar SearchEventCallBack="Search" />
        </div>
    </div>
    <div class="search-container">
        @if (_searching)
        {
            <div>
                Searching......
            </div>
        }
            <div class="row">
                @foreach (var model in Models)
                {
                   <div class="col-6 mb-2">
                    <DownloadComponent  Model="model.Dto()" />
                   </div>
                }
            </div>
    </div>
</div>

<style>
    .search-container{
        overflow-x: hidden;
        text-align: center;
        padding: 20px;
    }
</style>
