@inherits LayoutComponentBase
 
<RadzenLayout>
  <RadzenHeader>
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
      <RadzenSidebarToggle Click="@(() => SidebarExpanded = !SidebarExpanded)" />
      <SearchComponent />
    </RadzenStack>
  </RadzenHeader>
  <RadzenSidebar Responsive="true" Style="width: max-content">
    <RadzenPanelMenu DisplayStyle="@(SidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="true">
      <!--Home-->
      <RadzenPanelMenuItem Text="Home" Path="/" Icon="home" />
      <!--Home-->

      <!--Search-->
      <RadzenPanelMenuItem Text="Search" Path="/search" Icon="search" />
      <!--Search-->

      <!--Artist-->
      <RadzenPanelMenuItem Text="Artists" Path="/artists" Icon="groups" />
      <!--Artist-->

      <!-- Playlist -->
      <RadzenPanelMenuItem Text="Playlists" Path="/playlist" Icon="list">
        <!--For loop-->
        @foreach (var playlist in TemplPlaylist)
        {
           string path = $"/playlist/{playlist.Value}";
           string name = playlist.Key;
           <RadzenPanelMenuItem Text="@name" Path="@path" Icon="list"/>
        }
      </RadzenPanelMenuItem>
      <!-- Playlist -->

      <!--Cloud data-->
      <RadzenPanelMenuItem Text="CLoud/API" Path="/cloud" Icon="cloud"/>
      <!--Cloud data-->

      <!--Settings-->
      <RadzenPanelMenuItem Text="Settings" Path="/settings" Icon="settings" />
      <!--Settings-->

      <!--Logs-->
      <RadzenPanelMenuItem Text="Logs" Path="/logs" Icon="description" />
      <!--Logs-->

    </RadzenPanelMenu>
  </RadzenSidebar>
  <RadzenBody>
      @Body
  </RadzenBody>
  <RadzenFooter >
    <PlayerComponent />
  </RadzenFooter>
</RadzenLayout>

<RadzenComponents/>