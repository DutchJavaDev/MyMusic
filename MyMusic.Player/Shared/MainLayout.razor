@inherits LayoutComponentBase

<RadzenLayout>
  <RadzenHeader>
    <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" Gap="0">
      <RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
      <RadzenLabel Text="MyMusic" />
    </RadzenStack>
  </RadzenHeader>
  <RadzenSidebar Responsive="true" Style="width: max-content">
    <RadzenPanelMenu DisplayStyle="@(sidebarExpanded ? MenuItemDisplayStyle.IconAndText : MenuItemDisplayStyle.Icon)" ShowArrow="true">
      <RadzenPanelMenuItem Text="Home" Path="/" Icon="home" />
      <RadzenPanelMenuItem Text="Dashboard" Path="/cloud" Icon="dashboard" />
      <RadzenPanelMenuItem Text="UI Fundamentals" Icon="auto_awesome">
        <RadzenPanelMenuItem Text="Themes" Icon="color_lens" />
        <RadzenPanelMenuItem Text="Colors" Icon="invert_colors" />
      </RadzenPanelMenuItem>
    </RadzenPanelMenu>
  </RadzenSidebar>
  <RadzenBody>
    <div class="rz-p-4">
      @Body
    </div>
  </RadzenBody>
  <RadzenFooter>
    Footer
  </RadzenFooter>
</RadzenLayout>

@code {
  bool sidebarExpanded = true;
}